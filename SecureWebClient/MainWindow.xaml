<Window x:Class="SecureWebClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureWebClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="120"
                  ItemsSource="{Binding UrlComboBoxItems}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="DisplayName"
                  SelectedValue="{Binding SelectedUrl, Mode=TwoWay}"/>
        <ComboBox HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Width="120"
                  ItemsSource="{Binding TypeComboBoxItems}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="DisplayName"
                  SelectedValue="{Binding SelectedType, Mode=TwoWay}"/>
        <ComboBox HorizontalAlignment="Left" Margin="270,0,0,0" VerticalAlignment="Center" Width="350"
                  ItemsSource="{Binding DetailComboBoxItems}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="DisplayName"
                  SelectedValue="{Binding SelectedDetail, Mode=TwoWay}"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="630,0,0,0" VerticalAlignment="Center" Click="SendButton_Click"/>
        <Button Content="Setting" HorizontalAlignment="Left" Margin="670,0,0,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Name="ResultTextBox" AcceptsReturn="True" Margin="5,5,5,5" IsReadOnly="True" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="2" Name="LogTextBlock" TextWrapping="Wrap" Margin="10,10,10,10" Grid.RowSpan="2"/>
    </Grid>
</Window>
